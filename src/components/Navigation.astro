        <div class="dropdown-title">
            <p class="link-hover">Blog</p>
            <i><Icon name="chevron-up" /></i>
        </div>
        
        <div class="dropdown-content">
            <a href="/blog/" class="dropdown-item">
                <i style="font-size: 20px;"><Icon name="folder-open" /></i>
                <p>All</p>
            </a>
            <hr />
            <a href="/" class="dropdown-item">
                <i style="font-size: 20px;"><Icon name="math-max-min" /></i>
                <p>Mathematics</p>
            </a>
            <hr />
            <a href="/" class="dropdown-item">
                <i style="font-size: 20px;"><Icon name="atom" /></i>
                <p>Physics</p>
            </a>
            <hr />
            <a href="/" class="dropdown-item">
                <i style="font-size: 20px;"><Icon name="command" /></i>
                <p>Computer</p>
            </a>
        </div>
    </div>  
    <a href="/download" class="link-hover">download</a>
    <a href="/tags/" class="link-hover">Tags</a>
