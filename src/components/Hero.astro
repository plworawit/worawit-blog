---
const {
    headline = "Welcome to my blog.",
    msg = "I'm sharing knowledge in the areas which fascinate me the most."
} = Astro.props;
---

<section class="hero">
	<div class="headline">
		<div class="container">
			<h1><span>{headline}</span><h1>
			<p>{msg}</p>
		</div>
	</div>
</section>


<style is:global>
    /* Hero */
    .hero span {
        text-shadow: -2px 7px 4px rgba(11,10,10,0.77);
    }
.hero {
	height: 100px;
    background: #2A7B9B;
    background: radial-gradient(circle, rgb(179, 199, 207) 0%, rgb(164, 210, 228) 100%, rgb(173, 162, 60) 100%);
	display: flex;
}
.hero .headline {
	flex: auto;
	align-self: flex-end;
	padding: 24px 0;
}

.hero .container {
	display: flex;
	flex-direction: column;
	align-items: center;
}
.hero p {
	font-size: 14px;
	color: #2E5180;
	margin-bottom: auto;
}
.hero h1 {
    font-size: 22;
    color: navy;
}
@media(min-width: 900px) {
    .hero p {
        font-size: 16px;
    }
    .hero h1 {
        font-size: 30px;
    } 
    .hero .headline {
        padding: 30px 0;
    } 
}

</style>